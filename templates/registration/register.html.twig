{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div id="div1">
        <h1>Inscription</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'form-group'}}) }}
        {{ form_errors(registrationForm) }}

        {{ form_row(registrationForm.username, {'label': 'Pseudo', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.nom, {'label': 'Nom', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.prenom, {'label': 'Prénom', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.email, {'label': 'Email', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.telephone, {'label': 'Numéro de téléphone', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'form-control'}}) }}

        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
