{% extends 'base.html.twig' %}

{% block title %}Liste sortie{% endblock %}
{% block body %}

    <section>
        <table>
            <thead>
            <tr>
                <th>Nom:</th>
                <th>date heure début :</th>
                <th>durée:</th>
                <th>date limite d'inscription:</th>
                <th>Nombre d'inscription max:</th>
                <th>Info sortie:</th>
                <th>Etat:</th>
            </tr>
            </thead>
        </table>
    </section>
    <p>ici la liste des sortie</p>
    {% for sortie in sorties %}
    <p>{{ sortie.nom }}</p>
    <p>{{ sortie.date_heure_debut|date('d-m-Y-H-i-s') }}</p>
    <p>{{ sortie.duree|date('d-m-Y-H-i-s') }}</p>
    <p>{{ sortie.date_limiteinscription|date('d-m-Y-H-i-s') }}</p>
    <p>{{ sortie.nb_inscription_max }}</p>
    <p>{{ sortie.info_sortie }}</p>

    {% endfor %}
{% endblock body %}