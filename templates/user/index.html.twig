{% extends 'base.html.twig' %}
{% block title %}User index{% endblock %}
{% block body %}
    <div id="div1">
        <h1>User index</h1>
        {% for user in users %}
            <p class="font-weight-bold">{{ user.id }}</p>
            <p class="font-weight-bold">{{ user.username }}</p>
            <p>
                <button class="btn btn-primary"><a id="antilien" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                </button>
                <button class="btn btn-primary"><a id="antilien" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </button>
            </p>

        {% else %}
            <p colspan="5">no records found</p>
        {% endfor %}
    </div>
{% endblock %}
