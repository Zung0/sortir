{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div id="div1">
        <h1>Profil de {{ user.username|capitalize }}</h1>
        <p>Nom: {{ user.nom }}</p>
        <p>Prénom: {{ user.prenom }}</p>
        <p>Email: {{ user.email }}</p>
        <p>Numéro de téléphone: {{ user.telephone }}</p>

        {% if user.images is not empty %}
            <img src="{{ asset('images/' ~ user.images) }}" alt="Image" id="img">
        {% endif %}
        <div id="div2">
            {% if is_granted('ROLE_ADMIN') %}
                <button id="button" type="button" class="btn-primary">
                    <a id="antilien" href="{{ path('app_user_index') }}">
                        Retour à la liste des utilisateurs
                    </a>
                </button>
                <br>
            {% endif %}
            <button id="button1" type="button" class="btn-primary">
                <a id="antilien" href="{{ path('app_user_edit', {'id': user.id}) }}">
                    Modifier le profil
                </a>
            </button>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
